<div class="max-w-none mx-auto">
    <%= render 'select_station' %>

    <%= render 'weather_now' %>

    <div class="bg-white overflow-hidden sm:rounded-lg sm:shadow">

        <%= render 'period_tabs', period: 'daily' %>

        <div class="w-full mx-auto p-3">
            <div class="shadow-md">
                <% @count = 1 %>
                <% @measurements_list&.each do |key, item| %>
                    <% item.each do |mes| %>
                        <div class="tab w-full overflow-hidden border-t">
                            <input class="absolute opacity-0 " id="tab-multi-<%= @count %>" type="checkbox" name="tabs" checked>
                            <label class="block p-5 leading-normal cursor-pointer" for="tab-multi-<%= @count %>"><%= "#{mes.dimension.name} #{mes.dimension.unit}" %></label>
                            <div class="tab-content overflow-hidden border-l-2 bg-white border-indigo-500 leading-normal">
                                <p class="p-5"><%= line_chart mes.range_val %></p>
                            </div>
                        </div>
                        <% @count += 1 %>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
</div>

