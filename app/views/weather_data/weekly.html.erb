<div class="max-w-none mx-auto">
    <%= render 'select_station' %>

    <%= render 'weather_now' %>

    <div class="bg-white overflow-hidden sm:rounded-lg sm:shadow">

        <div class="max-w-7xl mx-auto">
            <div>
                <div class="border-b border-gray-200">
                    <nav class="-mb-px flex" aria-label="Tabs">
                    <a href="daily" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                        День
                    </a>
                    <a href="weekly" class="border-indigo-500 text-indigo-600 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                        Неделя
                    </a>
                    <a href="#" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                        Месяц
                    </a>
                    <a href="#" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 w-1/4 py-4 px-1 text-center border-b-2 font-medium text-sm">
                        Год
                    </a>
                    </nav>
                </div>
            </div>
        </div>

        <% @measurements_list&.each do |key, item| %>
            <% item.each do |mes| %>
                <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
                    <p> <%= "#{mes.dimension.name} #{mes.dimension.unit}" %> </p>
                    <p><%= line_chart mes.range_val %></p>
                </div>
            <% end %>
        <% end %>
    </div>
</div>